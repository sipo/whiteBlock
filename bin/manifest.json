{
    "manifest_version": 2,
    "name": "WhiteBlock",
    "description": "許可するスタイルの、ページブロッカー",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "./icon/icon_19.png",
        "default_title": "WhiteBlock",
        "default_popup": "./popup.html"
    },
    "permissions": [
        "tabs"
    ],
    "icons": {
        "16": "./icon/icon_16.png",
        "19": "./icon/icon_19.png",
        "48": "./icon/icon_48.png",
        "128": "./icon/icon_128.png"
    },
    "background": {
        "page":"./background.html"
    },
    "options_page": "./option.html",
    "web_accessible_resources": [ "./block.html"]
}
